<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable name="vm" type="com.wjf.dev.main.fragment.offcialAccount.OfficialAccountViewModel"/>
    </data>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/official_account_tab"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                app:tl_divider_color="@color/colorPrimary"
                app:tl_divider_padding="@dimen/dp_10"
                app:tl_divider_width="1dp"
                app:tl_indicator_color="@color/colorPrimary"
                app:tl_indicator_corner_radius="10dp"
                app:tl_indicator_margin_left="5dp"
                app:tl_indicator_margin_right="5dp"
                app:tl_indicator_style="BLOCK"
                app:tl_textSelectColor="@color/white"
                app:tl_textUnselectColor="#a0a0a0"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a0a0" />
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/official_account_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


    </LinearLayout>
</layout>